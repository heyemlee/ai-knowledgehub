FROM python:3.11-slim

WORKDIR /app

# 安装系统依赖
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# 复制依赖文件
COPY requirements.txt .

# 安装 Python 依赖
RUN pip install --no-cache-dir -r requirements.txt

# 复制应用代码
COPY . .

# 暴露端口（Railway 会动态分配）
EXPOSE 8000

# 设置环境变量默认值
ENV PORT=8000

# 启动命令（使用环境变量 PORT）
CMD uvicorn app.main:app --host 0.0.0.0 --port $PORT

